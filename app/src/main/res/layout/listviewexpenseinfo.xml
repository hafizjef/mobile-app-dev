<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="86dp"
        android:layout_height="45dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:text="Date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txtId"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtId"
        android:layout_width="86dp"
        android:layout_height="45dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:text="id"
        app:layout_constraintLeft_toRightOf="@+id/txtDate"
        app:layout_constraintRight_toLeftOf="@+id/txtExpName"
        app:layout_constraintTop_toTopOf="@+id/txtDate" />

    <TextView
        android:id="@+id/txtExpName"
        android:layout_width="86dp"
        android:layout_height="45dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:text="Exp Name"
        app:layout_constraintLeft_toRightOf="@+id/txtId"
        app:layout_constraintRight_toLeftOf="@+id/txtExpPrice"
        app:layout_constraintTop_toTopOf="@+id/txtDate" />

    <TextView
        android:id="@+id/txtExpPrice"
        android:layout_width="86dp"
        android:layout_height="45dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:text="Price"
        app:layout_constraintLeft_toRightOf="@+id/txtExpName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtDate" />
</android.support.constraint.ConstraintLayout>